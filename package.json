{
  "name": "charwrapper",
  "version": "2.0.0",
  "description": "Modern ES6+ text animation library for GSAP with TypeScript support",
  "type": "module",
  "main": "./dist/esm/CharWrapper.js",
  "types": "./dist/esm/CharWrapper.d.ts",
  "browser": "./dist/charwrapper.min.js",
  "exports": {
    ".": {
      "types": "./dist/esm/CharWrapper.d.ts",
      "import": "./dist/esm/CharWrapper.js",
      "browser": "./dist/charwrapper.min.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "bundle": "npm run build && node build-bundle.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run bundle"
  },
  "keywords": [
    "text",
    "animation",
    "gsap",
    "character",
    "wrapper",
    "typescript",
    "es6",
    "split-text",
    "text-effects",
    "dom",
    "accessibility"
  ],
  "author": "Robert Wildling",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.25.11",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/charwrapper.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/charwrapper/issues"
  },
  "homepage": "https://github.com/yourusername/charwrapper#readme"
}
